@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
<p><a asp-action="Register">Add a user</a></p>
@{ 
    if (Model.Count() < 1)
    {
        <p>No user in database yet.</p>
    }
    else
    {
        <h3 class="pageHeader">All Users</h3>
        <table border="1">
            <tr>
                <th>User Name</th>
                <th>Add Role</th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td><a asp-controller="Role"
                           asp-action="AddUserRole"
                           asp-route-id="@user.Id">Add a role</a></td>
                </tr>
            }
        </table>
    }
}