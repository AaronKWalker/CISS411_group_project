@model Microsoft.AspNetCore.Identity.IdentityRole
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <h3 class="pageHeader">Add A Role</h3>
    <form asp-controller="Role"
          asp-action="AddRole" method="post" class="form horizontal">
        <fieldset class="form-group">
            <label asp-for="Name" class="control-label col-xs-2"></label>
            <div class="col-xs-6">
                <input asp-for="Name" />
            </div>
        </fieldset>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <button class="btn btn-primary" type="submit">Add Role</button>
            </div>
        </div>
    </form>
<br/>