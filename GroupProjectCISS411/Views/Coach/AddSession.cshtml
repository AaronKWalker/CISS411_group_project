@model GroupProjectCISS411.Models.Session
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<h3 class="pageHeader">Add Session</h3>
<form asp-controller="Coach" asp-action="AddSession" method="post" class="form horizontal">
    <fieldset class="form-group">
        <label asp-for="SessionTitle" class="control-label col-xs-2"></label>
        <div class="col-xs-6">
            <input asp-for="SessionTitle" class="form-control" />
        </div>
    </fieldset>
    <fieldset class="form-group">
        <br />
        <label asp-for="StartDate" class="control-label col-xs-2"></label>
        <div class="col-xs-6">
            <input asp-for="StartDate" class="form-control" />
        </div>
    </fieldset>
    <fieldset class="form-group">
        <br />
        <label asp-for="EndDate" class="control-label col-xs-2"></label>
        <div class="col-xs-6">
            <input asp-for="EndDate" class="form-control" />
        </div>
    </fieldset>
    <fieldset class="form-group">
        <br />
        <label asp-for="SeatCapacity" class="control-label col-xs-2"></label>
        <div class="col-xs-6">
            <input asp-for="SeatCapacity" class="form-control" />
        </div>
    </fieldset>
    <fieldset class="form-group">
        <br />
        <label asp-for="DailyStartTime" class="control-label col-xs-2"></label>
        <div class="col-xs-6">
            <input asp-for="DailyStartTime" class="form-control" />
        </div>
        <br />
        <input asp-for="CoachId" type="hidden" />
    </fieldset>
        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <br />
                <button class="btn btn-primary" type="submit">Add Session</button>
            </div>
        </div>
</form>
