@model List<GroupProjectCISS411.Models.Enrollment>
<h2>Enter Swimmer Reports</h2>
<h3>Session: @Model[0].Session.SessionTitle</h3>
<form asp-controller="Coach" asp-action="PostReport" method="post">
    <table border="1">
        <tr>
            <th></th>
            <th>Swimmer ID</th>
            <th>Report</th>
        </tr>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    <input asp-for="@Model[i].EnrollmentId"
                           type="hidden"
                           vaule="@Model[i].EnrollmentId" />
                </td>
                <td>@Model[i].SwimmerId</td>
                <td><input asp-for="@Model[i].Report" /></td>
            </tr>
        }
    </table>
    <input type="submit" value="Submit" />
</form>
